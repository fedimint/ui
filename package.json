{
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:gateway-ui": "turbo run dev --parallel --filter=gateway-ui...",
    "dev:guardian-ui": "turbo run dev --parallel --filter=guardian-ui...",
    "build": "turbo run build",
    "build:gateway-ui": "turbo run build --filter=gateway-ui...",
    "build:guardian-ui": "turbo run build --filter=guardian-ui...",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "prepare": "husky install",
    "nix-guardian": "./scripts/mprocs-nix-guardian.sh",
    "nix-gateway": "./scripts/mprocs-nix-gateway.sh",
    "mprocs": "mprocs -c ./mprocs.yml"
  },
  "devDependencies": {
    "eslint": "^8.4.1",
    "husky": "^8.0.3",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "turbo": "latest"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
